  <xs:element name="mult" type="xs:int"/>
  <xs:element name="period_type">
    <xs:simpleType>
      <xs:restriction base="xs:token">
        <xs:enumeration value="once"/>
        <xs:enumeration value="day"/>
        <xs:enumeration value="week"/>
        <xs:enumeration value="month"/>
        <xs:enumeration value="end of month"/>
        <xs:enumeration value="nth weekday"/>
        <xs:enumeration value="last weekday"/>
        <xs:enumeration value="year"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
  <xs:element name="start" type="gnc:GDate"/>
  <xs:element name="weekend_adj">
    <xs:simpleType>
      <xs:restriction base="xs:token">
        <xs:enumeration value="none"/>
        <xs:enumeration value="back"/>
        <xs:enumeration value="forward"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
  <xs:element name="recurrence" type="recurrence:RecurrenceContent"/>
